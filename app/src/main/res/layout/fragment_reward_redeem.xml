<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_with_white_bg"
    tools:context=".RewardRedeem">

    <!-- GifImageView -->

    <!-- Linear Layout for Text -->

    <!-- Text: Redeem Your Reward -->

    <!-- FrameLayout below LinearLayout -->
    <FrameLayout
        android:layout_width="388dp"
        android:layout_height="178dp"
        >

        <EditText
            android:id="@+id/firstName"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="27dp"
            android:hint="First Name"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/userPoints"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="27dp"
            android:hint="Put your points"
            android:paddingLeft="20dp" />

    </FrameLayout>

    <Button
        android:id="@+id/sentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="202dp"
        android:layout_marginBottom="491dp"
        android:text="Submit"
        android:textSize="14sp" />

    <FrameLayout
        android:layout_width="388dp"
        android:layout_height="178dp"
        android:layout_marginTop="300dp"
        >

        <EditText
            android:id="@+id/retrieveUser"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="27dp"
            android:hint="The name will be here"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/retrievePoint"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="27dp"
            android:hint="The points will be shown here"
            android:paddingLeft="20dp" />

    </FrameLayout>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="197dp"
        android:layout_marginBottom="169dp"
        android:text="Logon"
        android:textSize="14sp" />

    <Button
        android:id="@+id/addingPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="179dp"
        android:layout_marginBottom="107dp"
        android:text="Go test"
        android:textSize="14sp" />

</RelativeLayout>


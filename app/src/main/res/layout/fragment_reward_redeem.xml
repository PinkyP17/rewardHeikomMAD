<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_with_white_bg"
    tools:context=".RewardRedeem">

    <!-- GifImageView -->

    <!-- Linear Layout for Text -->

    <!-- Text: Redeem Your Reward -->

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/circleFrame"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:background="@drawable/happy_overdose"
        android:paddingTop="100dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="101dp"
        android:paddingTop="20dp">

    </LinearLayout>

    <TextView
        android:id="@+id/rewardRedeemText"
        style="@style/rubikBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="7dp"
        android:text="Redeem Your Reward"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        style="@style/rubikBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="Welcome Wan Ahmad Nigger"
        android:textSize="25dp" />

    <!-- Other Views can be added similarly -->

</RelativeLayout>

